<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_margin="1dp">

    <android.support.v7.widget.CardView
        android:id="@+id/id_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/colorAccent">

            <!-- horizontales -->

            <android.support.constraint.Guideline
                android:id="@+id/horizontal_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0" />

            <android.support.constraint.Guideline
                android:id="@+id/horizontal_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <android.support.constraint.Guideline
                android:id="@+id/horizontal_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="1" />

            <!-- verticales -->

            <android.support.constraint.Guideline
                android:id="@+id/vertical_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0" />

            <android.support.constraint.Guideline
                android:id="@+id/vertical_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.18" />

            <android.support.constraint.Guideline
                android:id="@+id/vertical_85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.85" />

            <android.support.constraint.Guideline
                android:id="@+id/vertical_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="1" />

            <!-- Componentes -->

            <ImageView
                android:id="@+id/id_img_caratula"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="@+id/horizontal_100"
                app:layout_constraintLeft_toLeftOf="@+id/vertical_0"
                app:layout_constraintRight_toRightOf="@+id/vertical_18"
                app:layout_constraintTop_toTopOf="@+id/horizontal_0" />

            <TextView
                android:id="@+id/id_text_nombre_cancion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:gravity="center|left"
                android:text="Nombre canciÃ³n"
                android:textColor="@color/colorBlanco"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/horizontal_60"
                app:layout_constraintLeft_toLeftOf="@+id/vertical_18"
                app:layout_constraintRight_toRightOf="@+id/vertical_85"
                app:layout_constraintTop_toTopOf="@+id/horizontal_0" />

            <TextView
                android:id="@+id/id_text_nombre_disco"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:gravity="center|left"
                android:text="Nombre disco"
                android:textColor="@color/colorBlanco"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/horizontal_100"
                app:layout_constraintLeft_toLeftOf="@+id/vertical_18"
                app:layout_constraintRight_toRightOf="@+id/vertical_85"
                app:layout_constraintTop_toTopOf="@+id/horizontal_60" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>